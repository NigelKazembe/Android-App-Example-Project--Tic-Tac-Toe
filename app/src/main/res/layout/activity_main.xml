<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="89dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startGame">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="@string/dashes"
                android:textSize="55sp"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <Button
                android:id="@+id/button2"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="@string/dashes"
                android:textSize="55sp" />

            <Button
                android:id="@+id/button3"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="@string/dashes"
                android:textSize="55sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="@string/dashes"
                android:textSize="55sp" />

            <Button
                android:id="@+id/button5"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="@string/dashes"
                android:textSize="55sp" />

            <Button
                android:id="@+id/button6"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="@string/dashes"
                android:textSize="55sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="@string/dashes"
                android:textSize="55sp" />

            <Button
                android:id="@+id/button8"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="@string/dashes"
                android:textSize="55sp" />

            <Button
                android:id="@+id/button9"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="@string/dashes"
                android:textSize="55sp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/startGame"
        android:layout_width="118dp"
        android:layout_height="74dp"
        android:layout_marginTop="183dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/obutton"
        android:elevation="@dimen/cardview_default_elevation"
        android:padding="-50dp"
        android:text="Start Game"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="@color/md_theme_dark_onPrimary"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/buttons"
        app:layout_constraintEnd_toStartOf="@+id/restartGame"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/restartGame"
        android:layout_width="118dp"
        android:layout_height="74dp"
        android:layout_marginTop="183dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/restartbutton"
        android:elevation="@dimen/cardview_default_elevation"
        android:padding="-50dp"
        android:text="Restart Game"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="@color/md_theme_dark_onPrimary"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/startGame"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>